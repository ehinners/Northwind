@using Northwind.Models
@model Customer

<div class="bg-primary m-1 p-1 text-white"><h4>Registering</h4></div>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
            <input  class="form-control" placeholder="Company Name" asp-for="@Model.CompanyName" />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Address"  asp-for="@Model.Address">
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-5">
            <input type="text" class="form-control" placeholder="City"  asp-for="@Model.City">
            </div>
            <div class="col">
            <input type="text" class="form-control" placeholder="Country"  asp-for="@Model.Country">
            </div>
            <div class="col">
            <input type="text" class="form-control" placeholder="Region"  asp-for="@Model.Region">
            </div>
            <div class="col">
            <input type="text" class="form-control" placeholder="Postal Code"  asp-for="@Model.PostalCode">
            </div>
        </div>
        
    </div>
    
    <div class="form-group">
        <div class="form-row">
            <div class="col">
            <input type="text" class="form-control" placeholder="Phone Number"  asp-for="@Model.Phone">
            </div>
            <div class="col">
            <input type="text" class="form-control" placeholder="Fax"  asp-for="@Model.Fax">
            </div>
        </div>
        
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mb-2">Register</button>
    </div>    
</form>

@section Scripts {
    <script type="text/javascript" src="~/js/client.js"></script>
}