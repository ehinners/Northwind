@using Northwind.Models
@model ProductViewModel


<div class="bg-primary container">
    <div class="bg-primary m-1 p-1 text-white row d-flex justify-content-between align-items-end">
        <div>
            <h4>@Model.category.CategoryName</h4>
        </div>
        <div>
            <a class="btn btn-outline-light btn-lg" asp-action="Category" >Back to Categories</a>
        </div>        
    </div>
</div>



@if (Model.Products.Count() == 0)
{
    <p>There are no products</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Unit Price</th>
                <th scope="col">Units In Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in Model.Products)
            {
                <tr scope="row">
                    <td>
                        @product.ProductName
                    </td>
                    <td class="text-left">@string.Format("{0:c}", product.UnitPrice)</td>
                    <td>
                        @product.UnitsInStock
                    </td>
                </tr>
            }
        </tbody>
        
    </table>
}

@section scripts
{
    <script>
    $(function () {
        getProducts()
        function getProducts() {
            $.getJSON({
                url: "../../api/product",
                success: function (response, textStatus, jqXhr) {
                    $('#product_rows').html("");
                    for (var i = 0; i < response.length; i++){
                        var row = "<tr>"
                            + "<td>" + response[i].productName + "</td>"
                            + "<td>" + response[i].unitPrice + "</td>"
                            + "<td>" + response[i].unitsInStock + "</td>"
                            + "</tr>";
                        $('#product_rows').append(row);
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    // log the error to the console
                    console.log("The following error occured: " + textStatus, errorThrown);
                }
            });
        }
    });
    </script>
}
