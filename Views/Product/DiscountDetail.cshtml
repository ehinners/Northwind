@using Northwind.Models
@if (User.IsInRole("northwind-employee")){
    <a type="button" class="btn btn-primary btn-lg btn-block mb-4" asp-controller="Product" asp-action="AddDiscount">Add A Discount</a>
    }
@if (1 == 0)
{
    <p>There are no active discounts</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th scope="col">Discount</th>
            <th scope="col">Start</th>
            <th scope="col">End</th>
            <th scope="col">Summary</th>
            <th scope="col" class="text-right">Code</th>
            <th scope="col" class="text-right">Percentage</th>
            <th scope="col">Product</th>
            @if (User.IsInRole("northwind-employee")){
                <th scope="col">Modify</th>
            }
            
        </tr>
    </thead>
    <tbody>
        @foreach (Discount discount in Model)
        {
            <tr id="discountRows">
                <td>@discount.Title</td>
                <td>@String.Format("{0:MMM d yyyy}",discount.StartTime)</td>
                <td>@String.Format("{0:MMM d yyyy}",discount.EndTime)</td>
                <td> @discount.Description </td>
                <td class="text-right">@discount.Code</td>
                <td class="text-right">@String.Format("{0:0.##}", discount.DiscountPercent*100)% </td>
                <td>@discount.Product.ProductName</td>
                @if (User.IsInRole("northwind-employee")){
                    <td class="">
                        
                            <a type="button" class="btn btn-outline-primary btn-block" asp-controller="Product" asp-action="EditDiscount" asp-route-id="@discount.DiscountID">Edit</a> 
                            <a type="button" class="btn btn-outline-danger btn-block"  asp-controller="Product" asp-action="DeleteDiscount" asp-route-id="@discount.DiscountID">Delete</a>
                        
                    </td>
                    }
            </tr>
        }
    </tbody>
</table>
}
