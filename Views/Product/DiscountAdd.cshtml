@using Northwind.Models
@model Discount

<h2 class="mt-3"><i class="far fa-address-card"></i> Add Discount</h2>

<form method="post" asp-action="DiscountAdd">
    <div asp-validation-summary="All" style="color:red;"></div>
    <input type="hidden" name="DiscountID" value="@Model.DiscountID" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Title">Title</label>
            <input disabled asp-for="@Model.Title" class="form-control" placeholder="Title" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Description">Description</label>
            <input asp-for="@Model.Description" class="form-control" placeholder="Description" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.StartTime">Start Time</label>
            <input asp-for="@Model.StartTime" class="form-control" placeholder="Start Time" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.EndTime">End Time</label>
            <input asp-for="@Model.EndTime" class="form-control" placeholder="End Time" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.DiscountPercent">Discount Percent</label>
            <input asp-for="@Model.DiscountPercent" class="form-control" placeholder="Discount Percent" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
</form>