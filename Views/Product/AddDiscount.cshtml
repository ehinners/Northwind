@using Northwind.Models
@model Discount

<h2 class="mt-3"><i class="far fa-address-card"></i> Add Discount</h2>

<form method="post">
    <div asp-validation-summary="All" style="color:red;"></div>
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Title">Title</label>
            <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Description">Description</label>
            <input asp-for="@Model.Description" class="form-control" placeholder="Description" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.StartTime">Start Time</label>
            <input type="date" asp-for="@Model.StartTime" class="form-control" placeholder="Start Time" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.EndTime">End Time</label>
            <input type="date"  asp-for="@Model.EndTime" class="form-control" placeholder="End Time" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.DiscountPercent">Discount Percent (0.00 to 1.00)</label>
            <input type="number" step="0.005" asp-for="@Model.DiscountPercent" class="form-control" placeholder="50" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.ProductID">Discount Product</label>
            <input asp-for="@Model.ProductID" class="form-control" placeholder="0" />
        </div>        
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block mb-4">Save</button>
</form>