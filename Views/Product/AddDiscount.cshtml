@using Northwind.Models
@model Discount

<div class="bg-primary m-1 p-1 text-white"><h4>Add Discount</h4></div>
<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="@Model.Title" placeholder="Discount Title" />
    <input type="date" asp-for="@Model.StartTime" placeholder="2022-05-23T05:47:48"/>
    <input type="date" asp-for="@Model.EndTime"/>
    <input asp-for="@Model.ProductID" placeholder="0" />
    <button type="submit">Create</button>
</form>